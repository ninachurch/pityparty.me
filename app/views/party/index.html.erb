<div class="pity_party">
    <div class="container">
      <div class="request-container">
        <h1> FUQQQ ITTT</h1>
        <%= form_tag(view_path, :method => "post", remote: true) do %>
        <ul style="list-style-type:none;">
        <% @reasons.each do |t| %>
            <li> <%= check_box_tag  "reason_ids[]",t.id %> <%= t.name %>  </li>
        <%end%>
        </ul>
        <%= submit_tag("Pity Party Begin", :class => "doit") %>
        <%end %>
      </div>

    </div>

    <h1>Form Via Backbone</h1>
    <table class="reasons_table">
        <tr>
            <th>Name</th>
        </tr>
    </table>

</div>

<script type="text/javascript">
    $(function() {
        App.init();
    });
</script>